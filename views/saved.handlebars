<div class="container">

	<div class="row">
        <left>
        <div class="col-md-12">
			<h3 class="text-center text-regular">Saved Articles</h3>	
			<hr>		
			<ul>
				{{#each dbArticle}}					
					<h4>Title: {{this.title}}</h4>
					<h6>Link: {{this.link}}</h6>
                    <h6>Summary: {{this.summary}}</h6>                    
						{{!-- <form action='/api/update/{{this.id}}?_method=PUT' method='POST'> --}}
						<button type='submit' class="btn btn-default" id="addnote" data-toggle="modal" data-target="#myModal" data-id={{this.id}} saved={{this.saved}}>Add Note</button>
						<button type='submit' class="btn btn-default" id="deleteArticle" data-id={{this.id}} saved={{this.saved}}>Delete Article</button>
						
					{{!-- </form> --}}
					<p>------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>
				{{/each}}
			</ul>
		</div>
        </left>	
		
	</div>
</div>

<div class="modal" id="myModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
	  <div class="form-group">
            {{!-- <label for="message-text" class="col-form-label">enter notes</label> --}}
            <textarea class="form-control" id="message-text"></textarea>
          </div>
      {{!-- <div class="modal-body">
        <p>Add notes here.</p>
      </div> --}}
      <div class="modal-footer">
        <button type="button" id="savenote" class="btn btn-primary">Save notes</button>
        {{!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> --}}
      </div>
    </div>
  </div>
</div>

